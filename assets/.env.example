# ISOLATED LOCAL DATABASE ENVIRONMENT CONFIGURATION

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# PORT CONFIGURATION
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# All ports use a "1" prefix to avoid conflicts with standard ports
# and integration tests running on your machine. Customize as needed.
# After changing ports, restart with: localdb-down && localdb-up
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

LOCAL_POSTGRES_PORT=15432   # Standard: 5432
LOCAL_MYSQL_PORT=13306      # Standard: 3306
LOCAL_MONGODB_PORT=17017    # Standard: 27017
LOCAL_REDIS_PORT=16379      # Standard: 6379
LOCAL_ORACLE_PORT=11521     # Standard: 1521

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
